<resources>
    <style name="Theme.TimeCatch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/tc_primary</item>
        <item name="colorPrimaryVariant">@color/tc_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="PurpleCalendarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#2D2FA8</item>
    </style>
    <style name="Theme.Transparent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="CustomTimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#2D2FA8</item>
        <item name="android:headerBackground">#2D2FA8</item>
        <item name="android:numbersTextColor">#000000</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomButtonColor</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomButtonColor</item>
    </style>

    <style name="CustomButtonColor" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#2D2FA8</item>
    </style>
</resources>
