<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정을 생성하고 시작하기"
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvHeader"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvSub"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="이름"
            android:inputType="textPersonName"
            android:autofillHints="name"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="아이디"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmailLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvPwLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etEmail"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="비밀번호 입력"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvPwLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etPassword2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/etPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ✅ 약관 동의 + 이용약관 보기 링크 -->
        <LinearLayout
            android:id="@+id/rowAgree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etPassword2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <CheckBox
                android:id="@+id/cbAgree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용약관에 동의합니다. (필수)"
                android:textSize="11sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvTermsLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용약관 보기"
                android:textSize="11sp"
                android:textColor="@color/tc_primary"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:text="회원가입"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/tc_primary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/rowAgree"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvGoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인으로 돌아가기"
            android:textColor="@color/tc_primary"
            android:textSize="13sp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/btnSignUp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
